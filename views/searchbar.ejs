<form class="row" action="search" method="get">
	<div class="col-sm-12">
		<p class="lookfor"><span>Deseo buscar</span>
			<select class="selector no-search transparent-selector" id="lookfor">
				<option value="licitacion">Licitaciones</option>
				<option value="organismo">Organismos Públicos</option>
				<option value="proveedor">Proveedores</option>
			</select>
		</p>
		<div class="input-group border-thingy">
			<span class="input-group-btn">
		      <div class="btn-add-filter searchbar-btn active"><i class="fa fa-filter"></i><i class="fa fa-plus-circle"></i></div>
		    </span>
		    <input type="text" class="form-control searchbar-asdf" placeholder="Buscar en comprastransparentes.cl" name="q">
		    <span class="input-group-btn">
		      <button class="btn btn-default btn-compras-transparentes searchbar-btn" type="submit">Buscar</button>
		    </span>
	  	</div>
	</div>

	<div class="col-sm-12">
		<div class="advanced-filters-container">
			<div class="filters-container">
				<!-- Filtros avanzados para Licitaciones -->
				<div class="filters-container-panel hidden" id="filters_search_licitacion">
					<h5 class="super-title duper">Filtros <strong>Licitaciones</strong></h5>
					<div class="filter-module">
						<select class="selector flat no-search full-width" placeholder="Selecciona un filtro" id="lic_adv_fil">
							<option></option>
							<option value="add_select">Categoría de Producto</option>
							<optgroup label="Estado de Licitación">
								<option value="">Licitaciones Publicadas</option>
								<option value="">Licitaciones Adjudicadas</option>
								<option value="">Licitaciones Revocadas</option>
								<option value="">Licitaciones Suspendidas</option>
							</optgroup>	
							<option value="add_plata">Monto ($)</option>
							<optgroup label="Tipo de Fecha">
								<option value="add_picker">Fecha de Publicación</option>
								<option value="add_picker">Fecha de Adjudicación</option>
								<option value="add_picker">Fecha de Cerre</option>
							</optgroup>
						</select>
					</div>

					<!-- Cosas que debieran agregarse -->

					<!-- Select agregado -->
					<div class="filter-module follow-up hidden" id="otro_select">
						<select class="selector flat standard full-width" placeholder="Selecciona una categoría">
							<option></option>
							<option>1</option>
							<option>2</option>
						</select>
					</div>

					<!-- Datepickers -->
					<div class="filter-module follow-up hidden" id="fechapicker">
						<div class="datepicker-group">
							<div class="form-group">
				                <div class='input-group date' id='picker1'>
				                    <input type='text' class="form-control" name="filic" placeholder="Fecha desde" value=<%-fecha_creacioni%>/>
				                    <span class="input-group-addon">
				                        <span class="fa fa-calendar"></span>
				                    </span>
				                </div>
				            </div>
							<div class="form-group">
				                <div class='input-group date' id='picker2'>
				                    <input type='text' class="form-control" name="felic" placeholder="Fecha hasta" value=<%-fecha_creacione%> />
				                    <span class="input-group-addon">
				                        <span class="fa fa-calendar"></span>
				                    </span>
				                </div>
				            </div>
				        </div>	
					</div>

					<!-- Inputs de plata -->
					<div class="filter-module follow-up hidden" id="youtubemoney">
						<div class="monto">
							<input type="number" class="form-control" placeholder="Monto desde" name="alic" value=<%-montoi%>>
							<input type="number" class="form-control" placeholder="Monto hasta" name="xlic" value=<%-montoe%>>
						</div>
					</div>
					<!-- /Cosas que debieran agregarse fin -->

					<button type="button" class="btn btn-filtros btn-block"><i class="fa fa-plus-circle"></i> Agregar filtro</button>
				</div>

				<!-- Filtros avanzados para Organismos -->
				<div class="filters-container-panel hidden" id="filters_search_organismo">
					<h5 class="super-title duper">Filtros <strong>Organismos Públicos</strong></h5>
					<button type="button" class="btn btn-filtros btn-block"><i class="fa fa-plus-circle"></i> Agregar filtro</button>
				</div>

				<!-- Filtros avanzados para Proveedores -->
				<div class="filters-container-panel hidden" id="filters_search_proveedor">
					<h5 class="super-title duper">Filtros <strong>Proveedores</strong></h5>
					<button type="button" class="btn btn-filtros btn-block"><i class="fa fa-plus-circle"></i> Agregar filtro</button>
				</div>
			</div>
			<div class="added-filters-list">
				<div class="filters-list-container hidden" id="filters_list_licitacion">
					<h5>Filtros aplicados Licitacion</h5>		
				</div>
				<div class="filters-list-container hidden" id="filters_list_organismo">
					<h5>Filtros aplicados Organismo</h5>		
				</div>
				<div class="filters-list-container hidden" id="filters_list_proveedor">
					<h5>Filtros aplicados Proveedor</h5>		
				</div>
			</div>
		</div>
	</div>
</form>